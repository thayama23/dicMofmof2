<%= form_with(model: rent, local: true) do |form| %>
  <% if rent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rent.errors.count, "error") %> prohibited this rent from being saved:</h2>

      <ul>
      <% rent.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
    <%= form.number_field :price %>円
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :misc %>
  </div>

  <hr>
  <% n = 0 %>
  <%= form.fields_for :stations do |f| %>
    <%= "最寄り駅数#{n += 1}" %>

    <div class="field">
      <%= f.label :路線名 %>
      <%= f.text_field :line %>
    </div>

    <div class="field">
      <%= f.label :駅名 %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :徒歩数分 %>
      <%= f.number_field :distance %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
